{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2019",
      "WebWorker"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "isolatedModules": true
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
